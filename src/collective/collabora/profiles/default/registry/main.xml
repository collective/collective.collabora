<?xml version="1.0" encoding="utf-8"?>
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="collective.collabora"
>

  <record name="collective.collabora.server_url">
    <field type="plone.registry.field.TextLine">
      <title>URL of the LibreOffice / Collabora server</title>
      <description>
        The URL of the LibreOffice / Collabora server, e.g. "http://localhost:9980".
      </description>
      <required>True</required>
    </field>
    <value purge="false" />
  </record>
</registry>
